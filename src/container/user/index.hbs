<main>
	<section>
		<div class="form">
			<h1 class="form__title">Создать пользователя</h1>
			<form method="post" action="/user-create">
				<div class="form__content">
					<div class="form__field">
						<label for="email" class="form__label">Email:</label>
						<input type="email" name="email" class="form__input">
					</div>
					<div class="form__field">
						<label for="login" class="form__label">Login:</label>
						<input type="login" name="login" class="form__input">
					</div>
					<div class="form__field">
						<label for="password" class="form__label">Password:</label>
						<input type="password" name="password" class="form__input">
					</div>
					<button class="form__button">Создать</button>

				</div>
			</form>
		</div>
	</section>

	<section>
		<div class="form">
			<h1 class="form__title">Создать пользователей</h1>
			<div class="user-list">
				{{#with data.users}}
				{{#if isEmpty}}
				<mark>Список пользователей пустой</mark>
				{{else}}
				<ul>
					{{#each list}}
					<li>{{email}} | {{login}} | {{id}} <a href="/user-delete?id={{id}}">(Удалить)</a></li>
					{{/each}}
				</ul>
				{{/if}}
				{{/with}}
			</div>
		</div>
	</section>

	<section>
		<div class="form">
			<h1 class="form__title">Обновить почту пользователя</h1>
			<form method="post" action="/user-update">
				<div class="form__content">
					<div class="form__field">
						<label for="id" class="form__label">ID:</label>
						<input type="id" name="id" class="form__input">
					</div>

					<div class="form__field">
						<label for="email" class="form__label">Новый Email:</label>
						<input type="email" name="email" class="form__input">
					</div>

					<div class="form__field">
						<label for="password" class="form__label">Password:</label>
						<input type="password" name="password" class="form__input">
					</div>
					<button class="form__button">Отправить</button>

				</div>
			</form>
		</div>
	</section>

	<div class="nav">
		<a href="/" class="nav__button">Вернуться на начальную страницу</a>
		<a href="/product-create" class="nav__button">Перейти на Product</a>
	</div>
</main>



