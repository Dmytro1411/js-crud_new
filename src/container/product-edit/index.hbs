{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main>
	<section>
		<div class="form">
			<h1 class="form__title">Редактирование товара</h1>
			<form method="post" action="/product-edit">
				<div class="form__content">
					<div class="form__field">
						<div class="form__info">Информация про товар</div>
					</div>
					{{#with data}}
					{{!-- {{#each product}} --}}
					<div class="form__edit">

						<div class="form__field">
							<label for="name" class="form__label">Название товара:</label>
							<input type="text" id="name" class="form__input" value="{{name}}">
						</div>
						<div class="form__field">
							<label for="price" class="form__label">Цена:</label>
							<input type="text" id="price" class="form__input" value="{{price}}">
						</div>
						<div class="form__field">
							<label for="id" class="form__label"> ID: </label>
							<input type="tel" name="id" class="form__input" value="{{id}}">
						</div>

					</div>
					<div class="form__field">
						<label for="description" class="form__label">Краткое описание товара:</label>
						<textarea name="description" id="" cols="30" rows="5"
							class="form__description">{{description}}</textarea>
						{{!-- <input type="text" id="description" class="form__input" value="{{description}}"> --}}
					</div>
					{{!-- {{/each}} --}}


					<div class="form__enter">
						<button class="form__button blue">Сохранить обновление</button>
						<a href="/product-delete?id={id}}" class="form__button red"">Удалить товар</a>
					</div>
					{{/with}}

				</div>
			</form>
		</div>

	</section>
	<section>
		<div class=" nav">
							<a href="/" class="nav__button">Вернуться на начальную страницу</a>
							<a href="/user" class="nav__button">Перейти на User</a>
							<a href="/product-create" class="nav__button">Перейти на Product</a>
					</div>
	</section>




</main>








